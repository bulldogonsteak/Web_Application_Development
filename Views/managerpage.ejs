<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="icon" href="../Pictures/onlyLogo.png">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/styles/manager.css">
</head>

<body>
    <div class="ManagerHello-container">
        <h2 id="greeting">Hello <%= managerName %>,</h2>
        <p>This is what we've got for you today.</p>
    </div>

    <img src="../Pictures/graphExample.png" id="GraphCake">

    <div class="Data-container">
        <% data.forEach(item => { %>
        <div class="DataBox">
            <div class="icon"><i class="bi <%= item.icon %>"></i></div>
            <div class="content">
                <div class="text"><%= item.text %></div>
                <div class="number"><%= item.number %></div>
            </div>
        </div>
        <% }); %>
    </div>

    <div class="txt">
        <h2>What would you like to do?</h2>
    </div>

    <div class="UpdateItems-grid-container">
        <div class="Add-Item">
            <a href="#" id="showManagerForm">Manager Actions</a>
        </div>
    </div>

    <div class="card-container" id="managerActionForm" style="display: none;">
        <h2 id="h2">Manager Action Form</h2>
        <div class="selector">
            <label for="action">Select action:</label>
            <select id="action">
                <option value="create">Create</option>
                <option value="update">Update</option>
                <option value="delete">Delete</option>
            </select>
            <label for="type">Select type:</label>
            <select id="type">
                <option value="customer">Customer</option>
                <option value="product">Product</option>
                <option value="supplier">Supplier</option>
            </select>
            <div id="inputContainer">
                <input type="text" id="inputField" placeholder="Enter email or product ID">
            </div>
            <button id="fetchDetailsBtn">Fetch Details</button>
        </div>

        <div id="form-container">
            <!-- Forms will be dynamically inserted here -->
        </div>
    </div>

    <div class="Orders-conatiner">
        <h2>View latest orders</h2>

        <div class="card-container">
            <% orders.forEach(order => { %>
            <div class="Card">
                <div class="info">
                    <div class="OrderID-container">
                        <a id="ordertxt">order No.</a>
                        <a id="OrderID"><%= order.id %></a>
                    </div>
                    <div class="price-container">
                        <a id="TotalPrice">Total</a>
                        <a id="Totalnum"><%= order.total %></a>
                    </div>

                    <a id="HoverMe">Hover me to watch purchased items</a>
                </div>
                <div class="Show-on-hover">
                    <ul>
                        <% order.items.forEach(item => { %>
                        <li><%= item %></li>
                        <% }); %>
                    </ul>
                </div>
            </div>
            <% }); %>
        </div>
    </div>

    <div class="Employee-and-Facebook-grid">
        <div class="Employee-OfThe-Month">
            <h4>"<%= employeeMessage %>"</h4>
            <img src="../Pictures/employeen.png" id="EMP-pic">
        </div>
        <div class="socialMedia">
            <div class="social-mediaPIC">
                <img src="../Pictures/socialMedia.png" id="socialPIC">
            </div>
            <div class="facebook-post-section">
                <h2>Create a Facebook Post</h2>
                <div class="post-input">
                    <label for="post-content">Post Content:</label>
                    <textarea id="post-content" placeholder="What's on your mind?"></textarea>
                </div>
                <div class="media-upload">
                    <label for="media-upload">Upload Image/Video:</label>
                    <input type="file" id="media-upload" accept="image/*,video/*">
                </div>
                <div class="link-sharing">
                    <label for="link-url">Share a Link:</label>
                    <input type="url" id="link-url" placeholder="https://example.com">
                </div>
                <div class="post-preview">
                    <h3>Post Preview:</h3>
                    <div id="preview-content">Preview of your post will appear here.</div>
                </div>
                <div class="schedule-options">
                    <label for="schedule-time">Schedule for later:</label>
                    <input type="datetime-local" id="schedule-time">
                </div>
                <div class="post-actions">
                    <button id="post-now">Post to Facebook</button>
                    <button id="schedule-post">Schedule Post</button>
                </div>
                <div class="post-status">
                    <h3>Status:</h3>
                    <div id="status-message">No posts yet.</div>
                </div>
                <div class="post-logs">
                    <h3>Recent Posts:</h3>
                    <ul id="post-log-list">
                        <li>No recent posts.</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <script src="/scripts/manager.js"></script>
</body>

</html>
