<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="style.css">
</head>

<body>
    <div class="logo">
        <img src="/Pictures/logooo.png" id="logo" alt="Logo">
    </div>

    <div class="TOPnav">
        <div class="aTAGS">
            <a id="trendingTAG" href="/trending">Trending</a>
            <a id="aboutUsTAG" href="/about">About Us</a>
            <a id="supportTAG" href="/support">Support</a>
        </div>
        <div class="CartLOGIN">
            <a href="/profile">
                <i class="bi bi-person-circle"></i>
            </a>

            <a href="/cart">
                <i class="bi bi-cart"></i>
            </a>
        </div>
    </div>
    <nav class="topNav">
        <i class="bi bi-display"></i>
        <a id="pcTag">PC</a>
        <i class="bi bi-playstation"></i>
        <a id="consoleTag">PlayStation</a>
        <i class="bi bi-xbox"></i>
        <a id="mobileTag">Xbox</a>
        <i class="bi bi-nintendo-switch"></i>
        <a id="lifestyleTag">Nintendo</a>
        <div class="search-container">
            <div class="search-icon">
                <i class="bi bi-search" id="searchCircle"></i>
            </div>
        </div>
    </nav>

    <div class="image-container">
        <div class="gradient-overlay"></div>
        <img src="/pictures/9093.jpg" id="mainPic">
    </div>

    <br><br>

    <div class="product">
        <div class="imageOfproduct">
            <img src="<%= product.image %>" alt="Product Image">
        </div>
        <div class="product-card">
            <h3 class="product-name" id="product-name"><%=product.name%></h3>
            <div class="stock">
                <i class="bi bi-check-lg"></i>
                <a id="pcTag"><%= pcTagText %></a>
                <i class="bi bi-check-lg"></i>
                <a id="consoleTag"><%= consoleTagText %></a>
            </div>
            
            <div class="onlineUsers">
                <i class="bi bi-fire"></i>
                <p>75 users on this page</p>
            </div>

            <p class="product-price">$<%= product.price %></p>
            <button class="favorite">
                <i id="heart" class="bi bi-heart"></i>
            </button>
            <button class="cart">
                <i class="bi bi-cart"></i> Add to cart
            </button>
        </div>
    </div>

    <div class="Description">
        <h1>Description</h1>
        <p><%= product.description %></p>
    </div>

    <div class="UserTags">
        <p>User tags*:</p>
        <% product.userTags.forEach(tag => { %>
            <button type="button" class="btn btn-secondary"><%= tag %></button>
        <% }); %>
    </div>

    <div class="video-container">
        <iframe class="video" width="560" height="315" src="<%= product.videoUrl %>" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
    </div>

    <div class="similarProducts">
        <h3>Similar products</h3>
        <div class="row row-cols-1 row-cols-md-3 g-4 justify-content-center">
            <% similarProducts.forEach(product => { %>
                <div class="col">
                    <div class="card">
                        <img src="<%= product.image %>" id="imgCard" alt="<%= product.name %>">
                        <div class="card-body">
                            <p class="card-title"><%= product.name %></p>
                            <p class="card-text">$<%= product.price %></p>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

    <div class="comments-container">
        <h3><%= comments.length %> comments</h3>
        <div class="comments-grid">
            <% comments.forEach(comment => { %>
                <div class="comment-card">
                    <div class="user-info">
                        <i id="logo-user" class="bi bi-person-circle"></i>
                        <p class="name"><%= comment.userName %></p>
                        <p class="card-text"><%= comment.text %></p>
                        <div class="user-rating">
                            <% for (let i = 0; i < 5; i++) { %>
                                <% if (i < comment.rating) { %>
                                    <span>★</span>
                                <% } else { %>
                                    <span>☆</span>
                                <% } %>
                            <% } %>
                        </div>
                    </div>
                    <span class="comment-date"><%= new Date(comment.date).toLocaleDateString() %></span>
                </div>
            <% }); %>
        </div>
    </div>

    <div class="bottomMenu">
        <div class="item1">
            <img src="/Pictures/greenStars.png" id="greenstars">
            <a>TrustScore 4.7 | 710,848 reviews</a>
        </div>
        <div class="item2">
            <a href="#" class="glow-text">Terms of use</a>
            <a href="#" class="glow-text">Privacy policy</a>
            <a href="#" class="glow-text">Contact us</a>
            <div class="item2ICONS1">
                <i class="bi bi-controller"></i>
                <a href="#" class="glow-text">Discover new games</a>
            </div>
            <div class="item2ICONS2">
                <i class="bi bi-gift"></i>
                <a href="#" class="glow-text">Gift cards</a>
            </div>
        </div>
        <div class="item3">
            <a href="#" class="Dis">
                <i class="bi bi-discord"></i>
            </a>
            <a href="#" class="Insta">
                <i class="bi bi-instagram"></i>
            </a>
            <a href="#" class="facebook">
                <i class="bi bi-facebook"></i>
            </a>
            <a href="#" class="youtube">
                <i class="bi bi-youtube"></i>
            </a>
        </div>
        <div class="item4">4</div>
    </div>

    <script src="../Public/Product-Front/product.js"></script>
</body>

</html>
