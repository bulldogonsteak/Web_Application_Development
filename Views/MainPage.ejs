<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Console Castle</title>
    <link rel="icon" href="/images/onlyLogo.png">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/styles/index.css">
</head>

<body>
    <div class="TOPnav">
        <div class="aTAGS">
            <a id="trendingTAG" href="/trending" class="nav-link">Trending</a>
            <a id="aboutUsTAG" href="/about" class="nav-link">About Us</a>
            <a id="supportTAG" href="/support" class="nav-link">Support</a>
        </div>

        <div class="CartLOGIN">
            <a href="/profile" class="icon-link">
                <i class="bi bi-person-circle"></i>
            </a>
            <a href="/cart" class="icon-link">
                <i class="bi bi-cart"></i>
            </a>
        </div>
    </div>

    <div class="TOPnav">
        <div class="CartLOGIN">
            <a href="../login - Front/login.html" class="icon-link">
                <i class="bi bi-person-circle"></i>
            </a>
        </div>
    </div>
    <nav class="topNav">
        <div class="dropdown">
            <button class="dropbtn"><i class="bi bi-display"></i> PC</button>
            <div class="dropdown-content">
                <a href="http://example.com/pc/game1">Game 1</a>
                <a href="http://example.com/pc/game2">Game 2</a>
                <a href="http://example.com/pc/game3">Game 3</a>
            </div>
        </div>

        <div class="search-container">
            <div class="search-icon">
                <i class="bi bi-search" id="searchCircle"></i>
            </div>
            <input type="text" id="searchInput" class="search-input" placeholder="Search...">
        </div>
    </nav>

    <div class="image-container">
        <img src="/images/mainPIC.jpg" id="mainPic">
    </div>

    <br><br><br><br><br><br>

    <div class="trending">
        <div class="trendingTXT">
            <h2 id="trendingTXT">Trending</h2>
            <i class="bi bi-chevron-compact-right"></i>
        </div>
        <br>
        <div class="row row-cols-1 row-cols-md-3 g-4 justify-content-center">
            <% games.forEach(game => { %>
            <div class="col">
                <div class="card">
                    <div class="image_container">
                        <img src="/images/<%= game.image %>" class="card-img" alt="...">
                        <video class="hover-video" muted>
                            <source src="/videos/<%= game.video %>" type="video/webm">
                            Your browser does not support the video tag.
                        </video>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>
    </div>

    <div class="reviews-container">
        <div class="manIMG">
            <img src="/images/manIMG.png" id="manIMG">
        </div>
        <div class="starsANDtxt-container">
            <div class="stars-container">
                <% for (let i = 0; i < 4; i++) { %>
                <i class="bi bi-star-fill"></i>
                <% } %>
                <i class="bi bi-star-half"></i>
            </div>
            <h5>Instant Gaming is an amazing platform to buy your PC, PlayStation, Xbox and Switch games cheaper with a 24/7 instant delivery!</h5>
        </div>
    </div>

    <div class="bottomMenu">
        <div class="item1">
            <img src="/images/greenStars.png" id="greenstars">
            <a>TrustScore 4.7 | 710,848 reviews</a>
        </div>
        <div class="item2">
            <a href="#" class="glow-text">Terms of use</a>
            <a href="#" class="glow-text">Privacy policy</a>
            <a href="#" class="glow-text">Contact us</a>
            <div class="item2ICONS1">
                <i class="bi bi-controller"></i>
                <a href="#" class="glow-text">Discover new games</a>
            </div>
            <div class="item2ICONS2">
                <i class="bi bi-gift"></i>
                <a href="#" class="glow-text">Gift cards</a>
            </div>
        </div>
        <div class="item3">
            <a href="#" class="Dis">
                <i class="bi bi-discord"></i>
            </a>
            <a href="#" class="Insta">
                <i class="bi bi-instagram"></i>
            </a>
            <a href="#" class="facebook">
                <i class="bi bi-facebook"></i>
            </a>
            <a href="#" class="youtube">
                <i class="bi bi-youtube"></i>
            </a>
        </div>
        <div class="item4">4</div>
    </div>

    <script src="/scripts/index.js"></script>
    <script src="https://www.youtube.com/iframe_api"></script>
</body>

</html>
