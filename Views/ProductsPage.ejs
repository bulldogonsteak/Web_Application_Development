<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products</title>
    <link rel="icon" href="/images/onlyLogo.png">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/styles/products.css">
</head>

<body>
    <div class="SortMenu">
        <div class="header">
            <button class="openbtn" onclick="openNav()">&#9776; Sort</button>
            <div class="logo">
                <img src="/images/logooo.png" id="logo" alt="Logo">
            </div>
        </div>
        <div id="mySidepanel" class="sidepanel">
            <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
            <div class="CheckBoxes">
                <div>
                    <input type="checkbox" id="myCheck2" onclick="myFunction('text2')"> Most Viewed
                </div>
                <div>
                    <input type="checkbox" id="myCheck3" onclick="myFunction('text3')"> Highest Rated
                </div>
                <div>
                    <input type="checkbox" id="myCheck4" onclick="myFunction('text4')"> Lowest Rated
                </div>
            </div>
            <div class="dropdown">
                <a href="#" class="dropbtn">Genres</a>
                <div class="dropdown-content" id="genresDropdown">
                    <% genres.forEach(genre => { %>
                        <a href="/products?genre=<%= genre %>"><%= genre %></a>
                    <% }); %>
                </div>
            </div>
            <div class="dropdown">
                <a href="#" class="dropbtn">Sort By</a>
                <div class="dropdown-content" id="sortByDropdown">
                    <% sortOptions.forEach(option => { %>
                        <a href="/products?sort=<%= option.value %>"><%= option.label %></a>
                    <% }); %>
                </div>
            </div>
            <div class="dropdown">
                <a href="#" class="dropbtn">Systems</a>
                <div class="dropdown-content" id="systemsDropdown">
                    <% systems.forEach(system => { %>
                        <a href="/products?system=<%= system %>"><%= system %></a>
                    <% }); %>
                </div>
            </div>
        </div>
    </div>

    <div class="card-container" id="cardContainer">
        <% products.forEach(product => { %>
        <div class="card">
            <div class="media-container">
                <img src="/images/<%= product.image %>" alt="Product Image" class="product-image" style="width:100%">
                <video class="product-video" muted>
                    <source src="/videos/<%= product.video %>" type="video/mp4">
                    Your browser does not support the video tag.
                </video>
            </div>
            <div class="product-details">
                <h4 class="product-name"><%= product.name %></h4>
                <p class="price"><%= product.price %></p>
            </div>
            <p><button class="add-to-cart">Add to Cart</button></p>
        </div>
        <% }); %>
    </div>

    <script src="/scripts/products.js"></script>
</body>

</html>
